    "Evaluation": {
      "text": "",
      "subsections": {
        "ATLS_Blunt_Abdominal_Trauma_Algorithm": {
          "text": "Unstable\nFAST\nto search for free fluid (vs.\nDPL\nif unavailable)\nPositive: Exploratory laparotomy\nNegative: CT scan\nStable\nCT scan\nExploratory laparotomy, angiographic embolization, conservative management as indicated",
          "tables": []
        },
        "American_Association_for_the_Surgery_of_Trauma_Grading_System": {
          "text": "^Advance one grade for multiple injuries up to grade III",
          "tables": [
            [
              {
                "Grade^": "I",
                "Hematoma": "Subcapsular: <10% surface area",
                "Laceration": "Capsular tear: <1 cm in depth"
              },
              {
                "Grade^": "II",
                "Hematoma": "Subcapsular: 10-50% surface areaIntraparenchymal: <10 cm diameter",
                "Laceration": "Capsular tear: 1-3 cm depth, <10 cm length1–3 cm"
              },
              {
                "Grade^": "III",
                "Hematoma": "Subcapsular: >50% surface area, or ruptured with active bleedingIntraparenchymal: >10 cm diameter",
                "Laceration": "Capsular tear: >3 cm depth"
              },
              {
                "Grade^": "IV",
                "Hematoma": "Ruptured intraparenchymal with active bleeding",
                "Laceration": "Parenchymal disruption involving 25-75% hepatic lobe or involves 1-3 Couinaud segments (within one lobe)"
              },
              {
                "Grade^": "V",
                "Hematoma": "Ruptured intraparenchymal with active bleeding",
                "Laceration": "Parenchymal disruption involving >75% of hepatic lobe or involves >3 Couinaud segments (within one lobe)Juxtahepatic venous injuries (inferior vena cava, major hepatic vein)"
              },
              {
                "Grade^": "VI",
                "Hematoma": "",
                "Laceration": "Hepatic avulsion"
              }
            ]
          ]
        }
      },
