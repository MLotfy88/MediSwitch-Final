    "Clinical_Features": {
      "text": "More commonly affects proximal lower extremity muscles",
      "subsections": {
        "First_stage": {
          "text": "Localized muscle pain, low grade fevers, vague complaints\n[2]\nLocalized muscle inflammation without abscess",
          "tables": []
        },
        "Second_stage": {
          "text": "Worsening pain, muscle swelling, fever,\nabscess\nformation",
          "tables": []
