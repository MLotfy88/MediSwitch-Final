    "Overview": {
      "text": "The antibiotics listed are for common diseases in immunocompromised hosts",
      "subsections": {},
      "tables": [],
      "links": []
    },
    "CMV_Retinitis": {
      "text": "",
      "subsections": {
        "Severe_Vision_Threatening": {
          "text": "Ganciclovir intraocular implant for 8 months AND\nValganciclovir 900mg PO q12hrs x 14 days FOLLOWED BY 900mg PO q24hrs x 7 days",
          "tables": []
        },
        "Peripheral_lesions": {
          "text": "Valganciclovir 900mg PO q12hrs x 21 days FOLLOWED BY 900mg PO q24hrs x 7 days",
          "tables": []
        }
      },
      "tables": [],
      "links": []
    },
    "CMV_esophagitis": {
      "text": "Ganciclovir\n5mg/kg IV q12hrs daily x 21 days (or until symptom resolution)\nFoscarnet\n90mg/kg IV q12 hrs daily x 21 days (or until symptom resolution)",
      "subsections": {},
      "tables": [],
