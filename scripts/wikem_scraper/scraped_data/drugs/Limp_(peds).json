    "Evaluation": {
      "text": "",
      "subsections": {
        "Workup": {
          "text": "X-ray hip (AP & bilateral frog-leg view), femur, knee\nConsider CBC, ESR, CRP, total CK\nBlood culture if febrile.\n[1]\nConsider:\nUltrasound\nto evaluate for effusion\nCT to evaluate for abscess",
          "tables": []
        },
        "Kocher_Criteria_for_septic_arthritis_of_the_hip": {
          "text": "ESR > 40 mm/hr\nWBC > 12,000/microliter\nRefusal or inability to weight bear on affected joint\nFever\n38.5° C or greater",
          "tables": [
            [
              {
                "Number of Kocher Criteria": "1",
                "Chance of Septic Joint": "3%"
              },
              {
                "Number of Kocher Criteria": "2",
                "Chance of Septic Joint": "40%"
              },
              {
                "Number of Kocher Criteria": "3",
                "Chance of Septic Joint": "93%"
              },
              {
                "Number of Kocher Criteria": "4",
                "Chance of Septic Joint": "99%"
              }
            ]
          ]
        }
      },
