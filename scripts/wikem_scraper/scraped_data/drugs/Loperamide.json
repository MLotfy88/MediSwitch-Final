    "Adult_Dosing": {
      "text": "",
      "subsections": {
        "Acute_Diarrhea": {
          "text": "2mg PO per dose\nStart: 4mg PO x1, then 2mg PO after each loose stool; Max: 16mg/day",
          "tables": []
        },
        "Chronic_Diarrhea": {
          "text": "4-8mg/day PO divided QD-tid\nStart: 4mg PO x1, then 2mg PO after each loose stool until maint. dose established; Max: 16mg/day",
