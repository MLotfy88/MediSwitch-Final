    "Clinical_Features": {
      "text": "",
      "subsections": {
        "Dry_Beriberi": {
          "text": "Symmetrical peripheral neuropathy (\nmotor\nand\nsensory\n) mostly distal extremities",
          "tables": []
        },
        "Wet_Beriberi": {
          "text": "CHF\n,\nhigh output heart failure\n, cardiomegaly, peripheral edema,\ntachycardia\n,\nDOE/PND/orthopnea\nCan include neuropathy seen in Dry Beriberi",
          "tables": []
        },
        "Infantile_Beriberi": {
          "text": "CHF\n, cardiomegaly,\ntachycardia\n,\ncyanosis\n,\ndyspnea\n,\nweight loss\n, marasmus,\nvomiting\n, loud cry,\nnystagmus\n,\nseizure",
          "tables": []
        },
        "Bariatric_Beriberi": {
          "text": "Occurs 1-3 months post-\nbariatric surgery\nCauses are multifactorial, including low nutritional intake, poor baseline\nnutrition\n, persistent\nvomiting\n, malabsorption",
          "tables": []
        }
