    "Pediatric_Dosing": {
      "text": "A Piperacillin/Taxobactam 3.375g vial contains 3g piperacillin and 0.375g tazobactam (8:1 ratio)",
      "subsections": {
        "General_3": {
          "text": "<2 months\n100mg piperacillin/kg/dose IV q6 hours\n2-9 months\n80mg piperacillin/kg/dose IV q8 hours\n>9 months\n100mg piperacillin/kg/dose q8 hours\nMax: 16 g/day",
          "tables": []
        },
        "Appendicitis_and/or_Peritonitis": {
          "text": "2-9 months\n80mg piperacillin/kg/dose IV q8 hours\n>9 months\n≤40 kg: 100mg piperacillin/kg/dose IV q8 hours\n>40 kg: 3.375g (3000mg piperacillin) IV q6 hours\nMax: 16 g/day",
          "tables": []
        },
        "Cystic_Fibrosis,_Pseudomonal_Infection": {
          "text": "240-400mg piperacillin/kg/day IV divided q8 hours;\nConsider higher dose: 450-600mg/kg/day IV divided q4-6 hours\n[5]",
          "tables": []
        }
      },
      "tables": [],
