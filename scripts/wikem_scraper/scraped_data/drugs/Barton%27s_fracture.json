  "sections": {
    "Background": {
      "text": "Fracture-dislocation of distal radius extending into radiocarpal joint\nTwo types: volar and dorsal (based on direction of dislocation)",
      "subsections": {},
      "tables": [],
      "links": []
    },
    "Clinical_Features": {
      "text": "Wrist pain, usually after FOOSH injury",
      "subsections": {},
      "tables": [],
      "links": []
    },
