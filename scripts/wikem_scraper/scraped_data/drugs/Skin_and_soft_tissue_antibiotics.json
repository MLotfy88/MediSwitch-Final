    "Impetigo": {
      "text": "Coverage for\nMSSA\n,\nMRSA\n,\nGroup A Strep",
      "subsections": {
        "Topical_therapy": {
          "text": "Mupirocin\n(Bactroban) 2% ointment q8hrs x 5 days\nFor nonbullous impetigo, topic antibiotics are as effective as oral antibiotics",
          "tables": []
        },
        "Oral_Therapy": {
          "text": "Cephalexin\n500mg (6.25mg/kg) PO q6hrs for 10 days OR\nAmoxicillin/Clavulanate\n875mg (12.5mg/kg) PO q12hrs daily x 10 days OR\nClindamycin\n450mg PO q8hrs daily (or 10mg/kg PO q6hrs) for 10 days OR\nDicloxacillin\n500mg (3mg/kg) PO q6hrs daily x 10 days",
          "tables": []
        }
      },
