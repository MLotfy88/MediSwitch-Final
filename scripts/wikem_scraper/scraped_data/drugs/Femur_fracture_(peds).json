  "sections": {
    "Intro": {
      "text": "This page is for\npediatric\npatients. For adult patients, see:\nfemur fracture\n",
      "subsections": {},
      "tables": [],
      "links": []
    },
    "Background": {
      "text": "Bimodal distribution\nToddlers: Most common mechanism is falls\nAdolescents: High energy trauma such as MVA or Auto vs Ped\nMaintain high suspicion for\nchild abuse\n(second most common child abuse-related fracture after humerus)",
      "subsections": {},
      "tables": [],
      "links": [
        {
          "text": "child abuse",
          "url": "https://wikem.org/wiki/Child_abuse"
        }
      ]
    },
    "Clinical_Features": {
      "text": "History of trauma\nPain, point tenderness, deformity\nInability to walk/bear weight",
      "subsections": {},
      "tables": [],
      "links": []
    },
    "Differential_Diagnosis": {
      "text": "",
      "subsections": {
        "Proximal": {
          "text": "Intracapsular\nFemoral head fracture\nFemoral neck fracture\nExtracapsular\nIntertrochanteric femur fracture\nTrochanteric femur fracture",
          "tables": []
        },
        "Shaft": {
          "text": "Mid-shaft femur fracture\n(all subtrochanteric)",
          "tables": []
        },
        "Hip_Related": {
          "text": "Acute rheumatic fever\nDevelopmental dysplasia of hip\nFemur fracture\nJuvenile idiopathic arthritis\nLegg-Calve-Perthes disease\nSeptic arthritis of the hip (peds)\nLyme disease\narthritis\nSlipped capital femoral epiphysis\nTransient (toxic) synovitis\nOsteosarcoma",
          "tables": []
        },
        "Other_Causes_of_Limping": {
          "text": "Developmental dysplasia\nFracture\nToddler's fracture\nTillaux fracture\n, adolescent\nNeoplasm:\nLeukemia\nEwings\nOsteogenic sarcoma\nMetastatic\nneuroblastoma\nOsteomyelitis\nMyositis\nOther:\nAppendicitis\nMeningitis\nEpidural abscess (spinal)",
          "tables": []
        }
