    "Management": {
      "text": "",
      "subsections": {},
      "tables": [
        [
          {
            "Headache Type": "Migraine",
            "Treatment": "Ibuprofen, 10 milligrams/kg PO, or acetaminophen, 15 milligrams/kg PO/PR",
            "Comment": "Ibuprofen superior toacetaminophenin one trial"
          },
          {
            "Headache Type": "Sumatriptan, 10 milligrams via nasal spray (20–39 kg) or 20 milligrams via nasal spray (>40 kg), or 0.06 milligram/kg SC",
            "Treatment": "Nasal or injectable preferred; no difference between oral sumatriptan and placebo"
          },
          {
            "Headache Type": "Rizatriptan, 5 milligrams PO",
            "Treatment": "Efficacy not statistically significant over placebo"
          },
          {
            "Headache Type": "Dihydroergotamine, 0.1 milligram/kg (ages 6–9), 0.15 milligram/kg (ages 9–12), 0.2 milligram/kg (ages 12–16)",
            "Treatment": "Contraindicated in complex migraine"
          },
          {
            "Headache Type": "Prochlorperazine, 0.15 milligram/kg IV",
            "Treatment": "Considerdiphenhydramine1 milligram/kg to prevent or treat dystonic reactions"
          },
          {
            "Headache Type": "Cluster",
            "Treatment": "100% oxygen at 7 L/min via non-rebreather mask at onset of headache",
            "Comment": "Most useful at onset of symptoms, less effective later in course of headache"
          },
          {
            "Headache Type": "Ergotamine, 0.1 milligram/dose (ages 6–9), 0.5 milligram/dose (ages 9–12), 0.75 milligram/dose (ages 12–16)",
            "Treatment": "—"
          },
          {
            "Headache Type": "Sumatriptan",
            "Treatment": "Nasal spray or IM dosing as for migraine"
          },
          {
            "Headache Type": "Lidocaine, 1% solution in ipsilateral nostril",
            "Treatment": "Effective for mild to moderate pain, can instill via atomizer and syringe"
          },
          {
            "Headache Type": "Prednisone, 1–2 milligrams/kg for 10 d with subsequent 7-d taper",
            "Treatment": "Effective at terminating prolonged cluster headaches and preventing recurrence"
          },
          {
            "Headache Type": "Tension",
            "Treatment": "Ibuprofen, 10 milligrams/kg PO, or acetaminophen, 15 milligrams/kg PO/PR",
            "Comment": "—"
          }
        ]
      ],
      "links": []
    },
