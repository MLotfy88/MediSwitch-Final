    "Clinical_Features": {
      "text": "",
      "subsections": {
        "Initial_symptoms": {
          "text": "Sore throat\n(76%)\nFever\n(65%)\nTorticollis\n(37%)\nDysphagia\n(35%)",
          "tables": []
        },
        "Late_symptoms": {
          "text": "Stridor\n,\nrespiratory distress\n,\nchest pain\n(\nmediastinitis\n)\nDrooling, neck stiffness\nInvolvement of carotid neurovascular sheath",
          "tables": []
        },
        "Complications": {
          "text": "Mediastinitis\n,\nsepsis\n,\naspiration\nfrom spontaneous abscess formation\nJugular venous thrombosis,\nLemierre's syndrome",
          "tables": []
        }
