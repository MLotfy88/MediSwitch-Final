    "Evaluation": {
      "text": "CXR\n/CT\nWidened mediastinum representing hemorrhagic mediastinitis\nInfiltrate, pleural effusion\nHyperdense mediastinal lymphadenopathy",
      "subsections": {},
      "tables": [],
      "links": [
        {
          "text": "CXR",
          "url": "https://wikem.org/wiki/CXR"
        }
      ]
    },
    "Management": {
      "text": "Contact CDC Emergency Hotline 1-707-488-7100 for all suspected bioterrorism cases",
      "subsections": {
        "Postexposure_Prophylaxis": {
          "text": "Patient should be vaccinated at day #0, #14, #28\nCiprofloxacin\n500mg PO q12hrs daily x 60 days\nOR\nDoxycycline\n100mg PO q12hrs x 60 days",
          "tables": []
        },
        "Cutaneous_Anthrax_(not_systemically_ill)": {
          "text": "Ciprofloxacin 500mg PO q12hrs x 60 days\nDoxycycline 100mg PO q12hrs x 60 days",
          "tables": []
        },
        "Inhalation_or_Cutaneous_with_systemic_illness": {
          "text": "Ciprofloxacin\n400mg IV q12hrs x 60 days (1st line)\nOR\nDoxycycline\n100mg IV q12hrs x 60days (only if allergic to ciprofloxacin)\nPLUS\nClindamycin\n900mg IV q8hrs",
          "tables": []
        },
        "Pediatric_Postexpsoure_Prophylaxis": {
          "text": "Ciprofloxacin\n15mg/kg PO q12hrs x 60 days\nDoxycycline\n2.2mg/kg PO q12hrs x 60 days",
          "tables": []
        },
        "Pediatric_Cutaneous_Anthrax_(not_ill)": {
          "text": "Same as post exposure dosing and duration",
          "tables": []
        },
        "Pediatric_Inhalational_or_Cutaneous_(systemically_ill": {
          "text": "Ciprofloxacin\n15mg/kg IV q12hrs (1st line)\nOR\nDoxycycline\n2.2mg/kg IV q12hrs (only if allergic to cipro)\nPLUS\nClindamycin\n7.5mg/kg q6hrs daily",
          "tables": []
        }
      },
