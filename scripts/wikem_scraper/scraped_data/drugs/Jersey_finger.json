    "Evaluation": {
      "text": "Clinical diagnosis\nUltrasound\ncan differentiate between partial and complete rupture\n[1]",
      "subsections": {},
      "tables": [],
      "links": [
        {
          "text": "Ultrasound",
          "url": "https://wikem.org/wiki/Ultrasound:_Tendons"
        }
      ]
    },
    "Management": {
      "text": "Finger splint\nin slight flexion at DIP\nEarly follow-up (24-48 hours) with hand specialist - surgery is required for all Jersey finger injuries",
      "subsections": {},
      "tables": [],
      "links": [
        {
          "text": "Finger splint",
          "url": "https://wikem.org/wiki/Finger_splint"
        }
      ]
    },
    "Disposition": {
      "text": "Discharge",
      "subsections": {
        "Specialty_Care": {
          "text": "Based on Leddy and Packer Classification\n[2]",
          "tables": [
            [
              {
                "Class": "I",
                "Description": "Vincula ruptured with tendon retraction to palm",
                "Treatment": "Primary tendon repair within 10 days"
              },
              {
                "Class": "II",
                "Description": "Vincula intact with tendon retraction to proximal interphalangeal joint",
                "Treatment": "Primary tendon repair within 10 days (but may be delayed)"
              },
              {
                "Class": "III",
                "Description": "Fracture fragment retains tendon at distal interphalangeal joint",
                "Treatment": "Repair of fracture fragment (6 weeks)"
              },
              {
                "Class": "IV",
                "Description": "Fracture fragment has tendon avulsed off and retracted",
                "Treatment": "Repair of fracture fragment and tendon repair (12 weeks)"
              }
            ]
          ]
        }
      },
      "tables": [],
      "links": []
    },
