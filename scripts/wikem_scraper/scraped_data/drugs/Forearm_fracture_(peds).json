    "Evaluation": {
      "text": "",
      "subsections": {
        "Workup": {
          "text": "Radiographs:\nAP and lateral of forearm\nAlso consider AP and lateral of elbow and/or hand",
          "tables": []
        },
        "Diagnosis": {
          "text": "Clinically evaluate for:\nNon-accidental trauma (\nChild abuse\n)\nPuncture wounds over/near fracture site (open fracture)\nCompartment syndrome\n(rare)",
