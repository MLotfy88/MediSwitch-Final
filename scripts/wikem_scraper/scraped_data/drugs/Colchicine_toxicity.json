    "Clinical_Features": {
      "text": "",
      "subsections": {
        "Triphasic": {
          "text": "Phase I\nOnset 12-24 hours post ingestion\nGI manifestations\nPhase II\n24 hours- several days\nWide spread organ dysfunction\nPhase III\nRecovery or death\nLasts approximately 1 week",
          "tables": []
        },
        "GI": {
          "text": "Vomiting and diarrhea\nAbdominal pain",
          "tables": []
        },
        "Hematopoietic": {
          "text": "Peripheral leukocytosis followed by profound leukopenia\nPancytopenia within 48-72 hours\nRecovery of all cell lines occurs if patient survives",
          "tables": []
        },
        "Cardiovascular": {
          "text": "Dysrhythmias\nCardiac arrest\nOccurs within 24-36 hours",
          "tables": []
        },
        "Pulmonology": {
          "text": "Acute respiratory distress syndrome",
          "tables": []
        },
        "Neurologic": {
          "text": "Myopathy\nNeuropathy\nMyoneuropathy\nSeizures",
          "tables": []
        },
        "Musculoskeletal": {
          "text": "Rhabdomyolysis",
          "tables": []
        }
      },
