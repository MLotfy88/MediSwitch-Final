  "sections": {
    "General": {
      "text": "Type: Other\nantibiotics\nDosage Forms:\nIV\nPO: 250mg; 375mg; 500mg\nCommon Trade Names: Flagyl",
      "subsections": {},
      "tables": [],
      "links": [
        {
          "text": "antibiotics",
          "url": "https://wikem.org/wiki/Antibiotics"
        }
      ]
    },
    "Adult_Dosing": {
      "text": "",
      "subsections": {
        "General_2": {
          "text": "PO\n500mg PO q6-8h x 7-10 days\nFirst Dose: 500mg PO x 1\nIV\n15mg/kg IV x1, then 7.5mg/kg IV q6h\nFirst Dose: 15mg/kg IV x1\nMax: 1 gram/dose",
          "tables": []
        },
        "Amebic_liver_abscess": {
          "text": "500-750mg PO q8h x 5-10 days",
          "tables": []
        },
        "Colorectal_Surgery_Infection_Prophylaxis": {
          "text": "15mg/kg IV x 1\nComplete infusion 1h prior to surgery, then 7.5mg/kg IV q6h x 2\nMax: 1 g/dose",
          "tables": []
        },
        "Intestinal_Amebiasis": {
          "text": "750mg PO q8h x 5-10 days",
          "tables": []
        },
        "PID": {
          "text": "500mg PO q12 x 14 days\nSee\nPID\nfor full regimen",
          "tables": []
        },
        "Bacterial_Vaginosis": {
          "text": "500mg PO q12 x 7 days\nAlt: May use 250mg PO q8h x 7 days in pregnant patients\nProphylaxis (\nSexual Assault\n)\n2 g PO x 1",
          "tables": []
        },
        "Trichomoniasis": {
          "text": "Treatment\nImmunocompetent: 2 g PO x 1\nImmunocompromised: 500mg PO q12h x 7 days\nProphylaxis (\nSexual Assault\n)\n2 g PO x 1",
          "tables": []
        },
        "Giardiasis": {
          "text": "250mg PO q8h x 5-7 days\nAlt: 2 g PO q 24h x 3 days",
          "tables": []
        },
        "C._Difficile": {
          "text": "Mild-mod\n500mg PO q8h x 10-14 days\nSevere\n500mg IV q8h (give with\nvancomycin\nPO)",
          "tables": []
        },
        "H._pylori": {
          "text": "250-375mg PO q6h x 10-14 days (in combination)",
          "tables": []
        },
        "Urethritis,_recurrent/persistent_(Non-Gonococcal)": {
          "text": "2 g PO x 1 (with azithromycin)",
          "tables": []
        },
        "Tetanus": {
          "text": "500 mg  IV every 6 hours",
          "tables": []
        }
      },
