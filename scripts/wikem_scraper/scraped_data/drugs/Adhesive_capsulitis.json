    "Clinical_Features": {
      "text": "Hallmark is limited active and passive range of motion\nShoulder pain\nDiffuse, aching, poorly localized, accompanied by stiffness, worse at night\nNot typically reproducible by palpation",
      "subsections": {},
      "tables": [
        [
          {
            "Stage": "1",
            "Category": "Acute",
            "Timeline (months)": "2-3",
            "Findings": "Acute synovial inflammation with limitation of shoulder movement due to pain"
          },
          {
            "Stage": "2",
            "Category": "Freezing",
            "Timeline (months)": "3-9",
            "Findings": "Decreased shoulder motion due to capsular thickening/scarring; patient has chronic pain"
          },
          {
            "Stage": "3",
            "Category": "Frozen",
            "Timeline (months)": "9-15",
            "Findings": "Less pain, but significantly decreased range of motion"
          },
          {
            "Stage": "4",
            "Category": "Chronic",
            "Timeline (months)": ">15",
            "Findings": "Minimal pain, progressive improvement in shoulder range of motion"
          }
        ]
      ],
      "links": []
    },
