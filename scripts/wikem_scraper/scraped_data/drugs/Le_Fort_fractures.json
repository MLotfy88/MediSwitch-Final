    "Evaluation": {
      "text": "",
      "subsections": {
        "Workup": {
          "text": "CT sinus/face",
          "tables": []
        },
        "Diagnosis": {
          "text": "",
          "tables": [
            [
              {
                "Le Fort Fracture": "Type I",
                "Description": "Transverse fracture separating body of maxilla from pterygoid plate and nasal septum[1]Only hard palate and teeth move (when rock hard palate while stabilizing forehead)",
                "Front View": "",
                "Side View": "",
                "Stability": "Stable"
              },
              {
                "Le Fort Fracture": "Type II",
                "Description": "Pyramidal fracture through central maxilla and hard palateMovement of hard palate and nose occurs, but not the eyes",
                "Front View": "",
                "Side View": "",
                "Stability": "Can be stable or unstable fracture"
              },
              {
                "Le Fort Fracture": "Type III",
                "Description": "Craniofacial dysjunction (fracture through frontozygomatic sutures, orbit, nose, ethmoids)Entire face shifts with globes held in place only by optic nerve)Dish face deformity on lateral view",
                "Front View": "",
                "Side View": "",
                "Stability": "Unstable"
              },
              {
                "Le Fort Fracture": "Type IV",
                "Description": "Le Fort III plus involvement of frontal bone",
                "Front View": "",
                "Side View": "",
                "Stability": "Unstable"
              }
            ]
          ]
        }
      },
