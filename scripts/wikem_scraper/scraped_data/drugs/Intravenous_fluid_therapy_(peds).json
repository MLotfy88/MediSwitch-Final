        },
        "Calculation_Details": {
          "text": "mL/hr =\n(4 x first 10kg)\n+\n(2 x second 10kg)\n+\n(1 x every 1kg after)\nExample: For a 34 kg infant, you should run the IVF at 74 mL/hr. Often people choose to round to multiples of 5.",
          "tables": []
        },
        "Alternative_Calculation_Method": {
          "text": "",
          "tables": [
            [
              {
                "Weight (kg)": "<10",
                "Fluid Rate": "4 mL/kg per hour",
                "Example": "8 kg infant:4mL/kg per hour x 8 kg"
              },
              {
                "Weight (kg)": "10 to 20",
                "Fluid Rate": "40 mL/h +2 mL/kg per hour per each add kg",
                "Example": "15 kg child:40 mL/h +2 mL/kg per hour x 5 kg"
              },
              {
                "Weight (kg)": ">20",
                "Fluid Rate": "60 mL/h +1 mL/kg per hour per each add kg",
                "Example": "30 kg child:60 mL/h +1 mL/kg per hour x 10 kg"
              }
            ]
          ]
        }
      },
