    "Adult_Dosing": {
      "text": "",
      "subsections": {
        "General_2": {
          "text": "3.375 g IV q6 hours\nAlt: 4.5 g q6-8 hours\nMax: 18 g/day",
          "tables": []
        },
        "Extended_Interval_Dosing": {
          "text": "3.375 g IV infused over 4 hours q8 hours\nOff-label: may reduce costs without sacrificing efficacy\n[1]\n[2]",
          "tables": []
        },
        "Diverticulitis": {
          "text": "3.375 g IV q6 hours x 7-10 days",
          "tables": []
        },
        "Pneumonia": {
          "text": "CAP\n3.375 g IV q6 hours x 7-10 days\nOnly for P. aeruginosa caused or from aspiration\n[3]\nNosocomial\n4.5 g IV q6 hours or 3.375 g IV q4 hours x 7-14 days\n+ aminoglycoside or antipseudomonal fluoroquinolone",
          "tables": []
