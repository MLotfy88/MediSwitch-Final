    "Management": {
      "text": "",
      "subsections": {
        "IV_Antibiotics": {
          "text": "Treatment targets\nS. aureus\n,\nStreptococcus\n,\nPseudomonas\n,\nE. coli",
          "tables": []
        },
        "Inpatient_Therapy": {
          "text": "Vancomycin\n15-20 mg/kg IV BID\nPLUS\nany of the following:\nCeftriaxone\n2g  IV daily\nCefepime\n2g IV IV three times daily\nCeftazidime\n2g IV three times daily\nCiprofloxacin\n400mg IV three times daily\nUse\ncefepime\nor\nciprofloxacin\nif targeting Pseudomonas spp",
          "tables": []
        }
