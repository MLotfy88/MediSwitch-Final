    "Evaluation": {
      "text": "",
      "subsections": {
        "Workup": {
          "text": "Must have high clinical suspicion to make diagnosis\nCT scan abdomen/pelvis\nConsider\nultrasound for AAA\nFAST and DPL do not evaluate retroperitoneal space",
          "tables": []
        },
        "Classification_of_traumatic_retroperitoneal_hemorrhage": {
          "text": "Zone 1: Central\nPancreaticoduodenal injuries, major vascular injury\nZone 2: Flank/Perinephric\nRenal trauma\n, ureteric or colonic injury\nZone 3: Pelvic\nPelvic fracture or ileofemoral vascular injury",
          "tables": []
        }
      },
