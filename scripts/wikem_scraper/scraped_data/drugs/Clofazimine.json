    "Adult_Dosing": {
      "text": "",
      "subsections": {
        "Hansen's_disease,_multibacillary": {
          "text": "50mg PO qd x 12mo in combination with\nrifampin\nand\ndapsone\nGive 300mg PO qmo x 12mo in addition to daily dose",
          "tables": []
        },
        "Erythema_nodosum_leprosum": {
          "text": "100mg PO bid x12wk, then 100mg PO qd 12-24wk\nStart 100mg PO tid x12wek",
          "tables": []
        }
      },
