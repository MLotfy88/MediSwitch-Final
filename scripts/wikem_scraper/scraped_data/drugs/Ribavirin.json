    "Adult_Dosing": {
      "text": "200-1000mg daily (dose depends on genotype and concurrent treatment with interferon)",
      "subsections": {},
      "tables": [],
      "links": []
    },
    "Pediatric_Dosing": {
      "text": "Hep C: >2 years old: 15mg/kg daily\nOR\n400-1200mg daily\nRSV (severe cases): 20mg/ml aerosolized over 12-18 hours x 3-7 days",
      "subsections": {},
      "tables": [],
      "links": []
    },
