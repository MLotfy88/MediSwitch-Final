    "Clinical_Features": {
      "text": "",
      "subsections": {
        "Early_Signs": {
          "text": "Dysphagia\nOdynophagia\nTrismus\nEdema of upper midline neck and floor of mouth\nRaised tongue\n\"Woody\" or brawny texture to floor of mouth with visible swelling and erythema",
          "tables": []
        },
        "Late_signs": {
          "text": "Stridor\nDrooling\nTongue protrusion\nTrismus\nDysphonia\nCyanosis\nAcute laryngospasm",
          "tables": []
        },
        "Complications": {
          "text": "Carotid sheath infection\nIJ thrombophlebitis (\nLemierre's Disease\n)\nMediastinitis\nEmpyema\nPericardial effusion\nPleural effusion\nMandibular\nosteomyelitis\nSubphrenic\nabscess\nAspiration pneumonia\nCavernous sinus thrombosis\nBrain abscess",
          "tables": []
