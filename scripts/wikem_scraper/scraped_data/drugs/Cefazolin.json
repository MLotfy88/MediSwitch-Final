    "Pediatric_Dosing": {
      "text": "",
      "subsections": {
        "General_(<7_Days)": {
          "text": "40mg/kg/day IM/IV divided q12h\nFirst Dose: 20mg/kg IM/IV x 1\nMax 6g/day",
