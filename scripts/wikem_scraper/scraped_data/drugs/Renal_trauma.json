    "Evaluation": {
      "text": "",
      "subsections": {
        "Workup": {
          "text": "CT with contrast",
          "tables": []
        },
        "AAST_Renal_Injury_Scale": {
          "text": "",
          "tables": [
            [
              {
                "Grade": "I",
                "Description": "ContusionMicroscopic or gross hematuria. Urological studies normal.HematomaSubcapsular, non-expanding without parenchymal laceration.",
                "Image": "",
                "CT Example": ""
              },
              {
                "Grade": "II",
                "Description": "HematomaNon-expanding peri-renal hematoma confined to renal retroperitoneum.Laceration<1.0 cm parenchymal depth of renal cortex without urinary extravasation.",
                "Image": "",
                "CT Example": ""
              },
              {
                "Grade": "III",
                "Description": "Laceration>1.0 cm parenchymal depth of renal cortex without collecting system rupture or urinary extravasation.",
                "Image": "",
                "CT Example": ""
              },
              {
                "Grade": "IV",
                "Description": "LacerationParenchymal laceration extending through renal cortex, medulla, and collecting system.VascularMain renal artery or vein injury with contained hemorrhage.",
                "Image": "",
                "CT Example": ""
              },
              {
                "Grade": "V",
                "Description": "LacerationCompletely shattered kidney.VascularAvulsion of renal hilum that devascularises kidney.",
                "Image": "",
                "CT Example": ""
              }
            ]
          ]
        }
      },
