    "Administration": {
      "text": "Dosage Forms: 500mg vials, diluted into 250 mL and given over 60 mins\nRoutes of Administration: IV\nCommon Trade Names: Synercid",
      "subsections": {},
      "tables": [],
      "links": []
    },
    "Adult_Dosing": {
      "text": "VRE: 7.5mg/kg IV q8 hrs for minimum 7 days\nskin infections: 7.5mg/kg IV q12 hrs for minimum 7 days",
      "subsections": {},
      "tables": [],
      "links": []
    },
    "Pediatric_Dosing": {
      "text": "safety and efficacy has not been studied in children",
