    "Adult_Dosing": {
      "text": "",
      "subsections": {
        "Cystitis,_acute_uncomplicated_or_acute_simple:": {
          "text": "Monohydrate/macrocrystals (Macrobid): 100mg PO q12h\nMacrocrystals: 50-100mg PO 4 times daily for 5 days",
          "tables": []
        },
        "Cystitis,_recurrent,_prophylaxis_(continuous):": {
          "text": "Monohydrate/macrocrystals (Macrobid): 100mg PO daily at bedtime\nMacrocrystals: 50-100mg PO daily at bedtime",
          "tables": []
        },
        "Cystitis,_postcoital_prophylaxis": {
          "text": "Monohydrate/macrocrystals (Macrobid): 100mg PO once within 2 hours of sexual intercourse\nMacrocrystals: 50-100mg PO once within 2 hours of sexual intercourse",
          "tables": []
        }
      },
      "tables": [],
