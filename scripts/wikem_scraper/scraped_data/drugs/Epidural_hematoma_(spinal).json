    "Clinical_Features": {
      "text": "",
      "subsections": {
        "Epidural_compression_syndromes_table": {
          "text": "",
          "tables": [
            [
              {
                "Syndrome": "Location of lesion",
                "Spinal cord compression": "",
                "Conus medullaris syndrome": "Lesions at vertebral level L2",
                "Cauda equina syndrome": ""
              },
              {
                "Syndrome": "Spontaneous pain",
                "Spinal cord compression": "",
                "Conus medullaris syndrome": "Unusual and not severe; bilateral and symmetrical in perineum or thighs",
                "Cauda equina syndrome": "Often very prominent and severe, asymmetrical, radicular"
              },
              {
                "Syndrome": "Motor findings",
                "Spinal cord compression": "Deficits usually affect both legs but are often asymmetric",
                "Conus medullaris syndrome": "Not severe, symmetrical; rarely twitches",
                "Cauda equina syndrome": "May be severe, asymmetrical, fibrillary twitches of paralyzed muscles are common"
              },
              {
                "Syndrome": "Sensory findings",
                "Spinal cord compression": "Weakness in lower extremities, paresthesias/sensory deficits, gait difficulty",
                "Conus medullaris syndrome": "Saddle distribution, bilateral, symmetrical, disassociated sensory loss (impaired pain and temperature with sparing of tactile)",
                "Cauda equina syndrome": "Saddle distribution  (75% pts), may be asymmetrical, no dissociation of sensory loss"
              },
              {
                "Syndrome": "Reflexchanges",
                "Spinal cord compression": "",
                "Conus medullaris syndrome": "Achilles reflex may be absent",
                "Cauda equina syndrome": "Patellar and Achilles reflexes may be absent"
              },
              {
                "Syndrome": "Sphincter disturbance",
                "Spinal cord compression": "Bladder and rectal sphincter paralysis usually reflect the involvement of S3-S5 nerve roots",
                "Conus medullaris syndrome": "Early and marked (both urinary and fecal)",
                "Cauda equina syndrome": "Late and less severe (60-80% pts)"
              },
              {
                "Syndrome": "Male sexual function",
                "Spinal cord compression": "",
                "Conus medullaris syndrome": "Impaired early",
                "Cauda equina syndrome": "Impairment less severe"
              },
              {
                "Syndrome": "Onset",
                "Spinal cord compression": "",
                "Conus medullaris syndrome": "Sudden and bilateral",
                "Cauda equina syndrome": "Gradual and unilateral"
              },
              {
                "Syndrome": "Other",
                "Spinal cord compression": "",
                "Conus medullaris syndrome": "",
                "Cauda equina syndrome": "Urinary retention with or without overflow incontinence (Sn 90%, Sp 95%)"
              }
            ]
          ]
        }
      },
