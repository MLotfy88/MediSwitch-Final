    "Evaluation": {
      "text": "",
      "subsections": {
        "Work-up": {
          "text": "X-ray if suspicious for fracture\nPlain films or ultrasound can show effusion\nIf effusion found consider arthrocentesis\nPresence of effusion does not rule in or out transient synovitis as bilateral effusions can occur in 25% of children",
          "tables": []
        },
        "Evaluation_2": {
          "text": "Must distinguish from\nseptic arthritis\nTransient Synovitis favored by:\nTemperature <38.5\nESR <20\nWBC <12,000\nCRP <2\nSeptic arthritis favored by:\nTemperature >38.5\nESR >40\nWBC >12,000\nCRP >2\nsevere pain with ROM",
          "tables": []
        },
        "Kocher_Criteria_for_septic_arthritis_of_the_hip": {
          "text": "ESR > 40 mm/hr\nWBC > 12,000/microliter\nRefusal or inability to weight bear on affected joint\nFever\n38.5째 C or greater",
          "tables": [
            [
              {
                "Number of Kocher Criteria": "1",
                "Chance of Septic Joint": "3%"
              },
              {
                "Number of Kocher Criteria": "2",
                "Chance of Septic Joint": "40%"
              },
              {
                "Number of Kocher Criteria": "3",
                "Chance of Septic Joint": "93%"
              },
              {
                "Number of Kocher Criteria": "4",
                "Chance of Septic Joint": "99%"
              }
            ]
          ]
        }
