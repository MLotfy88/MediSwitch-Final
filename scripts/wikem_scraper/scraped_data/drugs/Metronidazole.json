    "Pediatric_Dosing": {
      "text": "",
      "subsections": {
        "(<1200g)": {
          "text": "7.5 mg/kg PO/IV q48h\nFirst Dose: 7.5 mg/kg PO/IV x 1",
          "tables": []
        },
        "(>1200g_AND_<1_Month_Old)": {
          "text": "<7 days old\n7.5-15 mg/kg/day PO/IV q12-24h\nFirst Dose: 7.5-15 mg/kg PO/IV x 1\n>7 days old\n15-30 mg/kg/day PO/IV q12h\nFirst Dose: 7.5-15 mg/kg PO/IV x 1",
          "tables": []
        },
        "(>1_Month_Old)": {
          "text": "30 mg/kg/day PO/IV q6h\nFirst Dose: 7.5 mg/kg PO/IV x 1\nMax: 4 g/day",
          "tables": []
        },
        "Bacterial_Vaginosis_2": {
          "text": "<45kg\n15 mg/kg/day PO divided q12h x 7 days\nFirst Dose: 7 mg/kg PO x 1\nMax: 1 g/day\n>45kg\n500mg PO divided q8h x 7 days\nFirst Dose: 500mg PO x 1\nMax: 2 g/day",
          "tables": []
        },
        "Prophylaxis_(sexual_Assault)": {
          "text": "<45kg'\n15 mg/kg/day PO divided q8h x 7 days\nFirst Dose: 7 mg/kg PO x 1\n>45kg\n2 g PO x 1",
          "tables": []
        },
        "Tetanus_2": {
          "text": "Same as\nStandard Pediatric Age/Weight Dosing",
          "tables": []
        }
