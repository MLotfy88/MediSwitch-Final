    "Management": {
      "text": "",
      "subsections": {
        "Severe_Vision_Threatening": {
          "text": "Ganciclovir intraocular implant for 8 months AND\nValganciclovir 900mg PO q12hrs x 14 days FOLLOWED BY 900mg PO q24hrs x 7 days",
          "tables": []
        },
        "Peripheral_lesions": {
          "text": "Valganciclovir 900mg PO q12hrs x 21 days FOLLOWED BY 900mg PO q24hrs x 7 days",
          "tables": []
        }
      },
      "tables": [],
      "links": []
