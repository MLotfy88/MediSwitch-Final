    "Pediatric_Dosing": {
      "text": "",
      "subsections": {
        "Acute_diarrhea_2": {
          "text": "2-5 yo, 13-20 kg\nDose: 1mg PO x1 after each loose stool\nMax: 3mg/day\nUse OTC 1mg/5 sol or 1mg/7.5 mL susp\n6-8 yo, 20-30 kg\nDose: start 2mg PO x1, then 1mg PO after each loose stool\nMax: 4mg/day\n8-11 yo, 30-40 kg\nDose: start 2mg PO x1, then 1mg PO after each loose stool\nMax: 6mg/day\n12 yo and older\nDose: start 4mg PO x1, then 2mg PO after each loose stool\nMax: 8mg/day",
          "tables": []
        },
        "Chronic_diarrhea_2": {
          "text": "0.08-0.24mg/kg/day PO divided bid-tid\nMax: 2mg/dose",
