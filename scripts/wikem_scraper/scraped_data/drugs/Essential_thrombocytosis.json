    "Evaluation": {
      "text": "",
      "subsections": {
        "Workup": {
          "text": "CBC\nChem 7\nESR\nBone marrow biopsy sometimes needed",
          "tables": []
        },
        "Evaluation": {
          "text": "Per the WHO guidelines, diagnosis of ET requires all of the following:",
          "tables": [
            [
              {
                "Major criteria": "Thrombocytosis ≥ 450 x 109L"
              },
              {
                "Major criteria": "Megakaryocyte proliferation with little to no granulocyte or erythroid proliferation"
              },
              {
                "Major criteria": "Not meeting criteria for CML, PV, PMF, MDS or other myeloid neoplasm"
              },
              {
                "Major criteria": "No evidence of reactive thrombocytosis or presence of JAK2V617F or other clonal marker"
              }
            ]
          ]
        }
      },
      "tables": [],
      "links": []
    },
